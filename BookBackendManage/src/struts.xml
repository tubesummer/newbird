<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" 
"http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="default" namespace="/" extends="struts-default">
		<!-- 学生的添加  -->
		<action name="addbook" class="addAction" method="book_add">
			<result name="input" type="redirect">/index.jsp</result>
			<result name="success" >/index.jsp</result>
			<result name="error" type="redirect">/failure.jsp</result>
		</action>
		<action name="bookTypeQuery" class="addAction" method="bookTypeQuery">
			<result name="input" type="redirect">/index.jsp</result>
			<result name="success" type="redirect">/add.jsp</result>
			<result name="error" type="redirect">/index.jsp</result>
		</action>
		<action name="queryBookAll" class="addAction" method="bookAllQuery">
			<result name="success" >/showAll.jsp</result>
			<result name="input" >/add.jsp</result>
			<result name="error" >/failure.jsp</result>
		</action>
	</package>
</struts>    
